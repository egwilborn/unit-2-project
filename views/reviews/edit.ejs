<%- include('../partials/header') %>
<div class = "show">
<section class="podcasts">
  <h1><%=podcast.title%></h1>
  <div id="listeners-airing">
    <p>
      Making New Episodes? <% if (podcast.newEpisodes) {%>
      <img id="checkmark"
        src="https://e7.pngegg.com/pngimages/325/286/png-clipart-check-mark-symbol-black-check-mark-angle-text-thumbnail.png"
      />
      Yes <%} else {%>
      <img id="xmark"
        src="https://img1.pnghut.com/6/4/3/CfmpYijLX6/black-and-white-icon-design-check-mark-area-cross.jpg"
      />
      No <%}%>
    </p>
  </div>

  <div class="podcast-details">
    <p id="podcast-description"><%=podcast.description%></p>
    <table id="details-table">
      <tr>
        <th>Hosts</th>
        <td><%=podcast.hosts%></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%=podcast.genre%></td>
      </tr>
      <tr>
        <th>Affiliation</th>
        <td><%=podcast.affiliation%></td>
      </tr>
      <tr>
        <th>First Aired</th>
        <td><%=podcast.firstAired%></td>
      </tr>
    </table>
  </div>
</section>
<section class = "reviews">
  <h1>Update Your Review of <%=podcast.title%></h1>
  <form action="/reviews/<%=review._id%>?_method=PUT" method="POST">


    <label>What to you think of <%=podcast.title%>?</label>
    <textarea name="content"><%=review.content%></textarea>
    <br />
    <label>Rating </label>
    <select name="rating">
      <option <% if(review.rating === 1) {%> selected <%}%>value="1">1</option>
      <optio <% if(review.rating === 2) {%> selected <%}%> value="2">2</option>
      <option <% if(review.rating === 3) {%> selected <%}%>value="3">3</option>
      <option <% if(review.rating === 4) {%> selected <%}%>value="4">4</option>
      <option <% if(review.rating === 5) {%> selected <%}%>value="5">5</option>
    </select>
    <br />
    <label>Would you recommend this podcast?</label>
    <input <% if(review.recommended === true) {%> checked <%}%> type="checkbox" name="recommended" />
    <br />
    <input type="submit" value="Update Your Review" />
  </form>
</section>
</div>
  <%- include('../partials/footer') %>

